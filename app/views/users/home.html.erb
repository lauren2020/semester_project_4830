<html style="height: 100%;">
<head>
<!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  <title>Zerospace</title>
</head>
    <body style="min-height: 100%; height: 100vh">
        <div class="mainNavBar" style="background-color: #00BCD4; color: #FFFFFF; padding: 10px; box-shadow: 0px 0px 8px 2px #000000; z-index: 2; position: relative; display: flex; flex-direction: row;">
            <h1>Zero Space</h1>
            <%= button_to "Logout", {:action => "logout"}, {:style => "float: right; position: absolute; right: 0; margin-top: 13px;"} %>
        </div>

        <div style="z-index: 1;">
            <%= javascript_pack_tag 'application' %>
            <%= react_component("HomeProvider", {user: @user} ) %>
        </div>

        <div style="display:flex;flex-direction:row;width:100%;background-color:gray; box-shadow: 0px 5px 8px 1px #757575; z-index: 2; position: relative;">
            <%= button_to "Feed", {:action => "feed"}, {:style => "color: white; background: #00BCD4; width: 25vw; height: 50px;"} %>
            <%= button_to "Groups", {:action => "groups"}, {:style => "color: white; background: #00BCD4; width: 25vw; height: 50px;"} %>
            <%= button_to "Connections", {:action => "connections"}, {:style => "color: white; background: #00BCD4; width: 25vw; height: 50px;"}  %>
            <%= button_to "Privacy Settings", {:action => "privacy_settings"}, {:style => "color: white; background: #00BCD4; width: 25vw; height: 50px;"}  %>
        </div>

        <div id="content">
            <%= render :file => @file %>
        </div>
    </body>
</html>